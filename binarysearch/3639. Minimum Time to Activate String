class Solution {
public:

    long long  isposs(string &s,vector<int> &order,int k,int mid){
        string t=s;
        for(int i=0;i<=mid;i++){
            t[order[i]]='*';
        }
        int ctr=0;long long ans=0;
        int n = t.size();
        int j=0;
        for(int i=0;i<n;i++){
            ctr+=t[i]=='*';
            while(ctr==1){
                ans+=n-i;
                ctr-=t[j]=='*';
                j+=1;
            }
        }
        return ans;
    }

    int minTime(string s, vector<int>& order, int k) {
        int ans=INT_MAX;
        int n = s.size();
        int lo=0,hi=n-1;
        while(lo<=hi){
            int mid = (lo+hi)/2;
            long long ele = isposs(s,order,k,mid);
            if(ele>=k){
                ans = mid;
                hi=mid-1;
            } else {
                lo=mid+1;
            }
        }
        return ans==INT_MAX?-1:ans;
    }
};

